<%# navbar %>
<nav class="navbar navbar-expand-lg navbar-light bg-white sticky-top">
  <button class="navbar-toggler border-0" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <%= link_to root_path, class: 'navbar-brand' do %>
    <%= image_tag "moocoo.png", width: "60" %>
  <% end %>
  <div class="d-flex">
    <% if user_signed_in? && current_user.photo.attached? %>
      <%= link_to new_user_session_path do %>
        <%# TODO set avatar %>
        <%= image_tag "profile.png", width: "40"%>
      <% end  %>
    <% else %>
      <%= link_to new_user_session_path do %>
        <%= image_tag "profile.png", width: "40"%>
      <% end  %>
    <% end %>
    <%= link_to "#", class: "navbar-cart" do %>
      <%= image_tag "cart.png", width: "45" %>
    <% end %>
  </div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to 'Products', home_products_path, class: 'nav-link'  %>
      </li>
      <li class="nav-item">
        <%= link_to 'Videos', home_videos_path, class: 'nav-link'  %>
      </li>
      <% if user_signed_in? %>
      <li class="nav-item">
        <%= link_to 'Logout', destroy_user_session_path, method: :delete, class: 'nav-link' %>
      </li>
      <% end %>
    </ul>
  </div>
</nav>

<%# searchbar %>
<div class="container my-3">
  <form action="/videos" style="text-align: center;">
    <div class="input-group mb-3">
      <input class="form-control" type="text" placeholder="Search for brands and products">
      <div class="input-group-append">
        <span class="input-group-text bg-dark text-white">
          <i class="fa fa-search" aria-hidden="true"></i>
        </span>
      </div>
    </div>
  </form>

  </nav>

  <%= render 'shared/search' %>

</div>

